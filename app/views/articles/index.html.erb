<style>
  .style_image
  {
    height: 100px;
    width: 100px;
  }
</style>

<div class="container">
  <div class="container-fluid">
    <!-- Je récupère la liste de mes articles et j'itère dessus pour afficher des <div>
    contenant mes articles -->
    <div class="row">
    <% @articles.each do |a| %>
          <% if @current_user && @current_user.role == a.role %>
              <div class="col-sm-6 col-md-3">
                <div class="thumbnail">
                  <%= image_tag a.image, :class => "style_image" %>

                  <div class="caption">
                    <h3>
                      <%= a.title %>
                    </h3>

                    <p>
                      <%= link_to "Lire l'article", article_path(a) %>
                    </p>
                  </div>
                </div>
              </div>
          <% elsif a.role == "user" %>
              <div class="col-sm-6 col-md-3">
                <div class="thumbnail">
                  <%= image_tag a.image, :class => "style_image" %>

                  <div class="caption">
                    <h3>
                      <%= a.title %>
                    </h3>

                    <p>
                      <%= link_to "Lire l'article", article_path(a) %>
                    </p>
                  </div>
                </div>
              </div>
          <% end %>
    <% end %>
    </div>
  </div>
</div>